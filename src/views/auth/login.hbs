<div class="card card-auth">

  <div class="card-header position-relative bg-body-secondary">
    <img src="/images/logo-192.webp"
         width="42"
         class="position-absolute top-0 end-0 mt-2 me-2"
         alt="logo">
    <h3>Inloggen</h3>
  </div>

  <div class="card-body">

    <form action="/login" method="post">
      {{#each inputs}}
        {{> form-input}}
      {{/each}}
      <button type="submit" class="btn btn-secondary mt-3 w-100">Inloggen</button>
    </form>

  </div>

  {{!-- <div class="card-footer">
    <a href="/register" class="small">Nog geen account? Registreer.</a>
  </div> --}}
</div>