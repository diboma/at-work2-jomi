<form action="{{ urlSubmit }}" method="post" class="w-100 mt-4">

  <div class="mb-3 row">
    <div class="col">
      <label for="date " class="form-label">Datum <span class="text-danger">*</span></label>
      <input type="date"
             name="date"
             id="date"
             class="form-control"
             required />
      {{#if inputErrors.date}}
        <p class="text-danger">{{inputErrors.date}}</p>
      {{/if}}

    </div>
    <div class="col">
      <label for="time " class="form-label">Uur: <span class="text-danger">*</span></label>
      <input type="time"
             name="time"
             id="time"
             class="form-control"
             required />
      {{#if inputErrors.time}}
        <p class="text-danger">{{inputErrors.time}}</p>
      {{/if}}
    </div>
  </div>

  <div class="mb-3">
    <label for="location" class="form-label">Plaats <span class="text-danger">*</span></label>
    <input type="text"
           name="location"
           id="location"
           class="form-control"
           required />
    {{#if inputErrors.location}}
      <p class="text-danger">{{inputErrors.location}}</p>
    {{/if}}
  </div>

  <div class="mb-3">
    <label for="cause" class="form-label">Aanleiding <span class="text-danger">*</span></label>
    {{#if inputErrors.cause}}
      <p class="text-danger">{{inputErrors.cause}}</p>
    {{/if}}
    <textarea name="cause" id="cause" class="form-control" rows="3" required></textarea>
  </div>

  <div class="mb-3">
    <label for="injury" class="form-label">Letsel <span class="text-danger">*</span></label>
    {{#if inputErrors.injury}}
      <p class="text-danger">{{inputErrors.injury}}</p>
    {{/if}}
    <textarea name="injury" id="injury" class="form-control" rows="3" required></textarea>
  </div>

  <div class="mb-3">
    <label for="care" class="form-label">Gegeven verzorging <span class="text-danger">*</span></label>
    {{#if inputErrors.care}}
      <p class="text-danger">{{inputErrors.care}}</p>
    {{/if}}
    <textarea name="care" id="care" class="form-control" rows="3" required></textarea>
  </div>

  <div class="mb-3">
    <input type="checkbox" name="is_pinned" id="is_pinned" class="form-check-input">
    <label for="is_pinned" class="form-label">Pinnen</label>
  </div>

  <button type="submit" class="btn btn-secondary mt-3 w-100">Opslaan</button>
  <a href="{{urlCancel}}" class="btn btn-outline-secondary mt-3 w-100">Annuleren</a>
</form>