<h2 class="text-center">Type: {{type}}</h2>

<form action="{{ urlSubmit }}" method="post" class="w-100 mt-4">

  <div class="mb-3">
    <label for="inflow_evaluation_subject_id" class="form-label">Onderwerp <span class="text-danger">*</span></label>
    <select name="inflow_evaluation_subject_id"
            id="inflow_evaluation_subject_id"
            class="form-select"
            required>
      <option value=""></option>
      {{#each inflowEvalSubjects}}
        <option value="{{ id }}">{{ name }}</option>
      {{/each}}
    </select>
    {{#if inputErrors.inflow_evaluation_subject_id}}
      <p class="text-danger">{{inputErrors.inflow_evaluation_subject_id}}</p>
    {{/if}}
  </div>

  <div class="mb-3">
    <label for="content" class="form-label">Inhoud <span class="text-danger">*</span></label>
    <textarea name="content"
              id="content"
              class="form-control"
              rows="3"
              required></textarea>
    {{#if inputErrors.content}}
      <p class="text-danger">{{inputErrors.content}}</p>
    {{/if}}
  </div>

  <div class="mb-3">
    <label for="comment" class="form-label">Opmerking</label>
    <textarea name="comment" id="comment" class="form-control" rows="3"></textarea>
  </div>

  <button type="submit" class="btn btn-secondary mt-3 w-100">Opslaan</button>
  <a href="{{urlCancel}}" class="btn btn-outline-secondary mt-3 w-100">Annuleren</a>
</form>