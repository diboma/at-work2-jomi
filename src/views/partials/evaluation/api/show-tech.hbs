<li id="eval-tech-{{ techEval.id }}" class="list-group-item  d-flex flex-column gap-1">
  <div class="d-flex justify-content-between flex-wrap">
    <span><strong>Datum: </strong>{{dateTime techEval.updated_at }}</span>
    <div class="d-flex gap-2">
      <span class="material-symbols-outlined text-warning"
            role="button"
            hx-get="/api/eval/edit/tech/{{techEval.id}}"
            hx-target="#eval-tech-{{ techEval.id }}"
            hx-swap="outerHTML swap:300ms">edit</span>
      <span class="material-symbols-outlined text-danger"
            role="button"
            hx-delete="/api/eval/delete/tech/{{techEval.id}}"
            hx-target="#eval-tech-{{ techEval.id }}"
            hx-trigger="confirmed"
            onClick="Swal.mixin(swalBootstrapMixin).fire(swalFireOptions).then((result)=> {
              if (result.isConfirmed) {
                htmx.trigger(this, 'confirmed');
              }
            });"
            hx-swap="outerHTML swap:300ms">delete</span>
    </div>
  </div>
  <span><strong>Coach: </strong>{{techEval.maatwerkcoach.firstname }} {{techEval.maatwerkcoach.lastname}}</span>
  <span><strong>Niveau: </strong>{{ techEval.level.name }}</span>
  {{#if techEval.comment}}
    <span><strong>Opmerking: </strong>{{ techEval.comment }}</span>
  {{/if}}
</li>