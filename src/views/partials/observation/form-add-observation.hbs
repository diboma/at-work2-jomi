<form action="{{ urlSubmit }}" method="post" class="w-100 mt-4">

  <div class="mb-3">
    <label for="observation_type_id" class="form-label">
      Type <span class="text-danger">*</span>
    </label>
    <select name="observation_type_id"
            id="observation_type_id"
            class="form-select"
            required>
      <option value=""></option>
      {{#each observationTypes}}
        <option value="{{ id }}">{{ name }}</option>
      {{/each}}
    </select>
    {{#if inputErrors.observation_type_id}}
      <p class="text-danger">{{inputErrors.observation_type_id}}</p>
    {{/if}}
  </div>

  <div class="mb-3">
    <label for="content" class="form-label">Inhoud <span class="text-danger">*</span></label>
    <textarea name="content"
              id="content"
              class="form-control"
              rows="3"
              required></textarea>
    {{#if inputErrors.content}}
      <p class="text-danger">{{inputErrors.content}}</p>
    {{/if}}
  </div>

  <div class="mb-3">
    <label for="comment" class="form-label">Opmerking</label>
    <textarea name="comment" id="comment" class="form-control" rows="3"></textarea>
  </div>

  <div class="mb-3">
    <input type="checkbox" name="is_pinned" id="is_pinned" class="form-check-input">
    <label for="is_pinned" class="form-label">Pinnen</label>
  </div>

  <button type="submit" class="btn btn-secondary mt-3 w-100">Opslaan</button>
  <a href="{{urlCancel}}" class="btn btn-outline-secondary mt-3 w-100">Annuleren</a>
</form>